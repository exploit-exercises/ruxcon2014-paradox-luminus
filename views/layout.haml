%html
  %head
    %link{ :href => '/css/united-bootstrap.min.css', :rel => 'stylesheet' }
    %title Luminus
  %body
    .navbar.navbar-inverse
      .navbar-inner
        %a{ :class => "btn btn-navbar", :'data-toggle' => 'collapse', :'data-target' => '.nav-collapse' }
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.brand{ :href => '/' } Luminus
        .nav-collapse
          %ul.nav
            %li.active 
              %a{ :href => '/' } Shopping

            %li
              %a{ :href => '/restart' } Restart
              

    %section{ :id => 'container', :class => 'clearfix' }
      .row-fluid
        .span12
          - if defined? flash and not flash.nil? and not flash.empty?
            .alert.alert-error
              #{flash}
            
      .row-fluid
        .span2
        .span8.well
          = yield
        .span2

